{% comment %}
- Simple Layout Divider
{% endcomment %}

{% include 'layout-divider' %}

{% schema %}

{
  "name": "Divider",
  "class": "divider-section",
  "settings": [
    {
      "type": "text",
      "id": "text",
      "label": "Text"  
    },
    {
      "type": "range",
      "id": "spacing",
      "min": 0,
      "max": 30,
      "step": 5,
      "unit": "px",
      "label": "Space",
      "default": 20
    },
    {
      "type": "checkbox",
      "id": "line",
      "label": "Show line",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "fade",
      "label": "Fade-Out Line",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Divider",
      "category": "Layout",
      "settings": {

      }
    }
  ]
}

{% endschema %}
{% include 'content-transformations', content_transform: product.description %}
{%- assign quick_view = false %}
{%- assign read_only = false %}
{%- if template contains "product.quick" %}
  {% layout none %}
  {%- assign quick_view = true %}
  {%- if template contains "product.quick_readonly" %}
    {%- assign read_only = true %}
  {% endif %}
{%- else %}
  
{%- endif %}

{%- assign image_slider_setting = section.settings.image_slider %}
{%- for ptag in product.tags %}
  {%- if ptag contains "slider:" %}
    {%- assign image_slider_setting = ptag | replace : "slider:", "" %}
  {%- endif %}
{%- endfor %}

{% assign image_tag_classes = "" %}
{% if section.settings.lazyload %}
  {% assign image_tag_classes = "lazyload" %}
{% endif %}

<div class="row" data-section-id="{{ section.id }}" data-product-wrapper data-enable-history-state="true" data-section-type="product" {% if quick_view %}data-product-quickview{% endif %}>
  {% if quick_view %}
    {% include 'cart-ribbon' %}
  {% else %}
    {% include 'breadcrumbs' %}
  {% endif %}

  <div class="small-12 {{section.settings.product_canvas_classes}} columns product-container">
  
    <div class="row" data-enable-history-state="true">

      {%- assign current_variant = product.selected_or_first_available_variant -%} {%- assign featured_image = current_variant.featured_image | default: product.featured_image -%}

      <meta itemprop="name" content="{{ product.title }}{% unless current_variant.title == 'Default Title' %} - {{ current_variant.title }}{% endunless %}">
      <meta itemprop="url" content="{{ shop.url }}{{ current_variant.url }}">
      <meta itemprop="brand" content="{{ product.vendor }}">
      <meta itemprop="image" content="{{ featured_image | img_url: '600x600' }}">
      <meta itemprop="description" content="{{ product.description | strip_html | escape }}">

      <div class="small-12 medium-6 large-6 columns" style="padding: 3vw 0px;">

        
        <div class="row product-images {% if section.settings.variant_images %}[data-variant-image-gallery]{% endif %} {% if image_slider_setting == "desktop" %}image-slider-desktop{% elsif image_slider_setting == "mobile" %}image-slider-mobile{% endif %}">

          {% if image_slider_setting != "none" %}
            <div class="small-12 columns product-image-slider">
              <div data-product-image-slider
                data-slider-arrows="{{section.settings.arrows}}"
                data-slider-dots="{{section.settings.dots}}"
                data-slider-infinite="{{section.settings.infinite}}"
                data-slider-slides-to-show="{{section.settings.slides_to_show}}"
                data-slider-slides-to-show-small="{{section.settings.slides_to_show_small}}"
                data-slider-slides-to-show-medium="{{section.settings.slides_to_show_medium}}"
                data-slider-slides-to-scroll="{{section.settings.slides_to_scroll}}"
                data-slider-autoplay="{{section.settings.slider_autoplay}}"
                data-slider-autoplay-secs="{{section.settings.slider_autoplay_secs}}">
                {% for image in product.images %}
                  <div class="product-image-instance product-image-slide {% if section.settings.image_zoom%}image-zoom{% endif %}" data-image="{{image.id}}" 
                  data-variants="{%- for ivar in image.variants %}{{ivar.id}}{%- endfor -%}" 
                  {% if section.settings.image_zoom %}data-product-image-zoom
                  data-image-zoom-mobile="{{section.settings.image_zoom_mobile}}" 
                  data-image-zoom-trigger="{{section.settings.image_zoom_trigger}}"                   
                  data-image-zoom-percentage="{{section.settings.image_zoom_magnification}}"{% endif %}
                  data-image-alt="{{image.alt}}"
                  data-image-variants="0{% for iv in image.variants %},{{iv.id}}{% endfor %}">
                  {% if section.settings.image_zoom_icon %}
                  {% include 'icon-plus' %}
                  {% endif %}
                    {% include 'image-tag',
                      image_tag_src : image,
                      image_tag_alt: image.alt
                      image_tag_sizing: '500x500',
                      image_tag_classes: image_tag_classes %}
                  </div>
                {% endfor %}
              </div>
            </div>
            {% if quick_view == false and product.images.size > 1 and section.settings.slider_thumbnails != "none" %}
              <div class="small-12 columns product-image-slider-thumbs product-image-slider-thumbs-{{section.settings.slider_thumbnails}}">
                <ul class="menu vertical image-thumb-gallery">
                  {% for image in product.images %}
                  <li data-image-alt="{{image.alt}}" data-image-variants="0{% for iv in image.variants %},{{iv.id}}{% endfor %}">
                    <a href="#" data-image="{{image.id}}" data-product-slider-thumbnail>
                      {% include 'image-tag',
                        image_tag_src : image,
                        image_tag_alt: image.alt
                        image_tag_sizing: '160x160',
                        image_tag_classes: image_tag_classes %}
                    </a>                    
                  </li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}
          {% endif %}
          
          {% if image_slider_setting != "slider" %}
            {% if product.images.size > 1 and quick_view == false %}
          		<div class="small-2 large-2 columns product-image-gallery">
              
                  <ul class="menu vertical image-thumb-gallery">
                    {% for image in product.images %}
                        {% if product.metafields.arbor.ProductYoutube and product.metafields.arbor.ProductYoutube != "" and forloop.last %}
                            {% break %}
                        {% endif %}
                      <li data-image-alt="{{image.alt}}" data-image-variants="0{% for iv in image.variants %},{{iv.id}}{% endfor %}">
                        <a href="{% if image contains 'gif' %}{{ image | img_url: '2048x' }}{% else %}{{ image | img_url: '2048x', format: 'pjpg' }}{% endif %}" data-product-single-thumbnail>   
                          {% include 'image-tag',
                          image_tag_src : image,
                          image_tag_alt: image.alt
                          image_tag_sizing: '160x160',
                          image_tag_classes: image_tag_classes %}
                        </a>

                      </li>
                    {% endfor %}

                    {% if product.metafields.arbor.ProductYoutube and product.metafields.arbor.ProductYoutube != "" %}
                        <li data-image-alt="Product Video" data-image-variants="0">
                          <a href="#" class="pdp-show">
                            {% if product.images.size > 1 %}
                                {% assign last_image_offset = product.images.size | minus : 1 %}
                                {% for image in product.images limit: 1 offset: last_image_offset %}
                                    {% include 'image-tag',
                                      image_tag_src : image,
                                      image_tag_alt: image.alt
                                      image_tag_sizing: '160x160',
                                      image_tag_classes: image_tag_classes %}
                                {% endfor %}
                            {% else %}
                                <img src="{{'video-thumbnail.jpg' | file_url}}">
                            {% endif %}
                          </a>
                        </li>
					{% endif %}
                  </ul>
            	</div>
                {% endif %}
              
            <div class="{% if product.images.size > 1 %}small-10 large-10 {% else %} small-12 large-12 {%endif%} product-image-gallery image-zoom" {% if section.settings.image_zoom %}data-product-image-zoom data-image-zoom-mobile="{{section.settings.image_zoom_mobile}}" data-image-zoom-trigger="{{section.settings.image_zoom_trigger}}" data-image-zoom-percentage="{{section.settings.image_zoom_magnification}}"{% endif %}>
              {% if section.settings.image_zoom_icon %}
              {% include 'icon-plus' %}
              {% endif %}
              {% include 'image-tag',
                image_tag_src : featured_image,
                image_tag_alt: featured_image.alt
                image_tag_sizing: '2048x',
                image_tag_classes: image_tag_classes,
                image_tag_data: 'data-product-featured-image'%}
              
              {% if product.metafields.arbor.ProductYoutube and product.metafields.arbor.ProductYoutube != "" %}
              	{% assign videos_youtube = product.metafields.arbor.ProductYoutube | split: "," %}
              	{% assign video_split = videos_youtube[0] | split: "?v=" %}
              	<div id="pdp-video" class="video-responsive">
                  <iframe width="560" height="315" src="https://www.youtube.com/embed/{{video_split[1]}}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
              	</div>
              {% endif %}
            </div>
          {% endif %}
          <div class="columns small-12 text-center">
           <br>Share this: {% if section.settings.show_share_buttons %} {% include 'social-sharing', share_title: product.title, share_permalink: product.url, share_image: product %} {% endif %}
          </div>
        </div>
      </div>

      <div class="small-12 medium-6 large-6 columns padding-small arbor-product-info">

        <h1 class="prod-title" data-product-title>{{ product.title }}</h1>
        
       <div class="row">
        
        <div class="columns padding-0">
                      <p class="sku">Item # {{product.selected_or_first_available_variant.sku}}</p>

            <!-- Yotpo Star Rating -->
        <div class="yotpo bottomLine"
          data-product-id="{{ product.id }}">

{%- assign yotpo_offload_content = shop.metafields.yotpo.yotpo_offload_content %}
  {%- assign time_now = 'now' | date: '%s' %}
  {%- assign yotpo_live_time = shop.metafields.yotpo.yotpo_live | date: '%s' %}
  {%- assign diff_seconds_from_live = time_now | minus: yotpo_live_time %}
  {%- assign yotpo_bottomline_last_updated = product.metafields.yotpo.bottomline_update_time | date: '%s' %}
  {%- assign diff_seconds_from_last_bottomline_update = time_now | minus: yotpo_bottomline_last_updated %}
  {%- if yotpo_live_time and diff_seconds_from_live < 86400 or yotpo_bottomline_last_updated and diff_seconds_from_last_bottomline_update < 86400 -%}
    {%- assign yotpo_bottomline_obsolete = false %}
  {%- else %}
    {%- assign yotpo_bottomline_obsolete = true %}
  {%- endif %}
  {%- if yotpo_offload_content == 'yes' and yotpo_bottomline_obsolete != true -%}
    {{ product.metafields.yotpo.bottomline }}
  {%- endif %}
        </div>
        
        <p class="hide" data-product-vendor>{{ product.vendor }}</p>
        <p class="hide" data-variant-sku>{{ current_variant.sku }}</p>
        <p class="hide" data-variant-barcode>{{ current_variant.barcode }}</p>
        <p class="hide" data-variant-id>{{ current_variant.id }}</p>
        

        <div class="prod-price" data-price-wrapper data-product-id="{{product.id}}">
          <span data-product-price class="{% unless product.tags contains "price-static" %}price-display{% endunless %}">
            {{ current_variant.price | money }}
          </span>
          {% if product.compare_at_price_max > product.price %}
            <span class="visually-hidden {% unless product.tags contains "price-static" %}price-display{% endunless %}" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
            <s data-compare-price class="{% unless product.tags contains "price-static" %}price-display{% endunless %}">
              {% if current_variant.compare_at_price > current_variant.price %}
                {{ current_variant.compare_at_price | money }}
              {% endif %}
            </s>
            {% endif %}
        </div>
        
        </div>
        
        <div class="columns">
         {% include 'product-badge', badge_product: product %}
		</div>
        
         </div>
 
        <div class="rte" class="prod-content prod-content-one">
          {{product.metafields.arbor.ShortDescription}}
        </div>
        
        {% if product.metafields.arbor.QTYpricingQTYtier1 and product.metafields.arbor.QTYpricingQTYtier1 != "" %}
        	<div class="save">Buy {{product.metafields.arbor.QTYpricingQTYtier1}} and pay ${{product.metafields.arbor.QTYpricingAMTtier1}} each!</div>
        {% endif %}
        {% if product.metafields.arbor.QTYpricingQTYtier2 and product.metafields.arbor.QTYpricingQTYtier2 != "" %}
        	<div class="save">Buy {{product.metafields.arbor.QTYpricingQTYtier2}} and pay ${{product.metafields.arbor.QTYpricingAMTtier2}} each!</div>
        {% endif %}

        {% unless read_only %}
          <div itemprop="offers">
            <meta itemprop="priceCurrency" content="{{ shop.currency }}">
            <meta itemprop="price" content="{{ current_variant.price | divided_by: 100.00 }}">
            <link itemprop="availability" href="http://schema.org/{% if current_variant.available %}InStock{% else %}OutOfStock{% endif %}">

            {% form 'product', product, class: "data-product-form" %}
            
              {% comment %}Special Date Field. Enable this field via JS to group multiple items in the cart together{% endcomment %}
              <input type="hidden" class="prop-dtstamp" id="dtstamp-{{product.id}}" name="properties[_dtstamp]" disabled>
              
              {% comment %}special input field to be populated by pricing rules{% endcomment %}
              <input type="hidden" class="pr-property-{{product.id}}" id="pr-property-{{product.id}}" name="properties[_pr_{{product.id}}]" disabled>
            
              <div class="row">
                {% unless product.variants.size == 1 and product.options.size == 1 and product.options.first == 'Title' and product.variants.first.title == 'Default Title' %}
                
                  {% for option in product.options_with_values %}
                    <div class="columns {% if section.settings.swatches %}hide{% endif %}">
                      <div class="selector-wrapper js">
                        <label {% if option.name=='default' %}class="label-hidden" {% endif %} for="SingleOptionSelector-{{ forloop.index0 }}">
                          {{ option.name }}
                        </label>
                      
                        <select id="SingleOptionSelector-{{ forloop.index0 }}" data-single-option-selector data-index="option{{ option.position }}">
                          {% for value in option.values %}
                            <option value="{{ value | escape }}" {% if option.selected_value == value %}selected="selected"{% endif %}>
                              {{ value }}
                            </option>
                          {% endfor %}
                        </select>
                      </div>
                    </div>
                  {% endfor %}
                  
                  {% if section.settings.swatches %}
                    <div class="columns swatch_options" data-swatches>
                      {% for option in product.options %}     
                          {% include 'product-swatch' with option %}
                      {% endfor %}
                    </div>
                  {% endif %}
                {% endunless %}
                
                <select name="id[]" class="no-js hide" data-product-select>
                  {% for variant in product.variants %}
                    <option {% if variant == current_variant %}selected="selected"{% endif %}
                      {% unless variant.available %}disabled="disabled"{% endunless %}
                      value="{{ variant.id }}">{{ variant.title }}
                    </option>
                  {% endfor %}
                </select>
               <div class="row green">
                <div class="columns small-4">
                  <div class="selector-wrapper">
                    <label for="quantity">{{ 'products.product.quantity' | t }}</label>
                    <div class="product-quantity input-group input-number-group">
                      <div class="input-group-button">
                        <span class="input-number-decrement input-number-decrement-global">-</span>
                      </div>
                      <input class="input-number product-item-quantity" id="quantity" type="number" name="quantity" value="1" min="1" max="{{section.settings.max_quantity}}">
                      <div class="input-group-button">
                        <span class="input-number-increment input-number-increment-global">+</span>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="columns small-8">
                  <button class="button primary full-width" type="submit" name="add" data-loading-text="{{ 'products.product.add_to_cart_loading' | t }}" data-add-to-cart {% unless current_variant.available %}disabled="disabled" {% endunless %} {% if section.settings.ajax %}data-ajax{% endif %}>
                    <span data-add-to-cart-text>
                      {% if current_variant.available %}
                        {{ 'products.product.add_to_cart' | t }}
                      {% else %}
                        {{ 'products.product.sold_out' | t }}
                      {% endif %}
                    </span>
                    <span class="blue"> / quote</span>


                  </button>
                    <div class="row">
                    	<div class="columns small-12 text-center add-actions">
                        	{% include 'ZooomyListWishlistProduct' %}
                        	<a href="mailto:?Subject={{ 'Check out this product from Arbor Scientific' | url_param_escape }}&body={{ 'Check out this ' | url_param_escape }}{{ product.title | url_param_escape }}{{ ' from Arbor Scientific!' | url_param_escape }}%0D%0A%0D%0A{{ product.description | strip_html | url_param_escape }}%0D%0A%0D%0A{{ shop.url }}{{ product.url }}" target="_blank">
                              <span>
                                <i class="fa fa-envelope"></i>
                              </span>
                              <p>Email</p>
                            </a>
                    	</div>
        
         
      				</div>
                </div>

               </div>

              {% if section.settings.enable_dynamic_checkout %}
                {{ form | payment_button }}
              {% endif %}
            {% endform %}
                </div>
          </div>
        
          {% if quick_view %}
            <a class="small-link" href="{{product.url}}">{{ 'products.product.quick_view_details_link' | t }}</a>
          {% endif %}
          
        {% endunless %}
        
       
     
      {% unless quick_view %}
      {% if section.settings.display_extended %}      
        <div class="small-12 medium-12 large-12 columns">        
          <div class="rte" class="prod-content prod-content-two">            
            {% if section.settings.display_extended %}
              {% include 'product-extended' %}
            {% endif %}
          </div>        
        </div>
      {% endif %}
      {% endunless %}
      
    </div>
  </div>
  
  {% include 'arbor-product-tabs' %}  
  
  {% if section.settings.display_related and quick_view == false %}
    {% include 'product-related' %}    
  {% endif %}
  
    
    {% comment %}Reviews{% endcomment %}
      <!-- Start: Land on page to write a reivew -->
      <script>
        if (window.location.href.indexOf("?yotporeviews") > -1) {
          var yotpoIsReady = false;
          (function checkForYotpo() {
            setTimeout(function() {
              if (typeof yotpo !== "undefined") {
                if (yotpo.initialized === true) {
                  yotpoIsReady = true;
                  var yotpoanchor = document.querySelector('.yotpo.yotpo-main-widget');
                  yotpoanchor.scrollIntoView();
                  setTimeout(function() {
                    document.querySelector('.write-review-button').click();
                  }, 500);
                }
              } else {
                console.log('Checking for Yotpo...');
              }
              if (yotpoIsReady === false) checkForYotpo();
            }, 250);
          })();
        }
      </script>
      <!-- End: Land on page to write a reivew -->
      <div class="xtabs-panel">
        <div class="columns yotpo-container">
          <div class="yotpo yotpo-main-widget" 
           data-product-id="{{ product.id }}"
           data-price="{{ variant.price | money_without_currency }}"
           data-currency="{{ shop.currency }}" 
           data-name="{{ product.title | escape }}" 
           data-url="{{ shop.url }}{{ product.url }}" 
           data-image-url="{{ product.featured_image | product_img_url: "large" |replace: '?', '%3F' | replace: '&','%26'}}" 
           data-description="{{ product.description | escape }}"> 
          </div>
        </div>
      </div>
  
  {% unless product.empty? %}
    <script type="application/json" data-product-json>{{ product | json }}</script>
    {% include 'pricing-data', pricing_data_type: "product", pricing_data_product: product %}
  {% endunless %}
  
</div>

  
{% if product.metafields.arbor.ProductYoutube and product.metafields.arbor.ProductYoutube != "" %}
  {% assign video = product.metafields.arbor.ProductYoutube %} 
  {% if video %}
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "VideoObject",
      "@id": {{ product.metafields.arbor.ProductYoutube | json }},
      "name": {{product.title | json }},
      "description": {{ product.metafields.global.description_tag | json }},
      {% if product.images.size > 1 %}
        {% assign last_image_offset = product.images.size | minus : 1 %}
        {% for image in product.images limit: 1 offset: last_image_offset %}
          "thumbnailUrl": "{{image | file_url}}",
        {% endfor %}
      {% else %}
        "thumbnailUrl": "{{'video-thumbnail.jpg' | file_url }}",
      {% endif %}
      "contentUrl": {{ product.metafields.arbor.ProductYoutube | json }},  
      "uploadDate": "{{product.published_at}}",
      "publisher": {
        "@type": "Organization",
        "name": "Arbor Scientific",
        "logo": {
          "@type": "ImageObject",
          "url": "https://cdn.shopify.com/s/files/1/0030/6207/1369/t/32/assets/logo_small.png?6993"
        },
        "url": "{{shop.url}}{{page.url}}"
      }
    }
    </script>
    
  {% endif %}
{% endif %}

{% schema %}
  {
    "name": "Product Pages",
    "settings": [
      {
        "type": "header",
        "content": "Product Page Settings"
      },
      {
        "type": "checkbox",
        "id": "ajax",
        "label": "Enable AJAX Adding to Cart",
        "default": false,
        "info": "Enabling this option will add items to the cart without leaving the page."
      },
      {
        "type": "number",
        "id": "max_quantity",
        "label": "Quantity selector maximum",
        "default": 10
      },
      {
        "type": "number",
        "id": "quick_view_description_max",
        "label": "Maximum description length on product quick view",
        "default": 250
      },
      {
        "type": "checkbox",
        "id": "show_share_buttons",
        "label": "Show social sharing buttons",
        "default": true
      },
      {
        "type": "text",
        "id": "badge_bis_field",
        "label": "Back In Stock Badge Field",
        "info":"'namespace.key' of the metafield to display if out of stock"
      },
      {
        "type": "checkbox",
        "id": "swatches",
        "label": "Enable product swatches",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "lazyload",
        "label": "Enable lazyloading of images"
      },
      {
        "type": "checkbox",
        "id": "swatches_link",
        "label": "Enable product swatch linking",
        "default": false,
        "info": "Only show swatches that are available based on the first product option"
      },
      {
        "type": "checkbox",
        "id": "variant_images",
        "label": "Enable variant image filtering",
        "default": false,
        "info":"Only show the selected variant, and related images based on the image's ALT text matching a variant option value"
      },
      {
        "type": "checkbox",

      {
          "type": "number",
          "id": "slides_to_show",
          "label": "Slides To Show",
          "default": 1
      },
      {
          "type": "number",
          "id": "slides_to_show_small",
          "label": "Slides To Show On Mobile",
          "default": 1
      },
      {
          "type": "number",
          "id": "slides_to_show_medium",
          "label": "Slides To Show On Tablet",
          "default": 2
      },
      {

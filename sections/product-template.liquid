        "label": "Image Slider",
        "default": "none",
        "options": [	
          {
          "value": "none",
          "label": "No Slider"
          },
          {
          "value": "slider",
          "label": "Enable Slider"
          },
          {
          "value": "mobile",
          "label": "Slider On Mobile Only"
          },
          {
          "value": "desktop",
          "label": "Slider On Desktop Only"
          }
        ]
      },
      {
          "type": "select",
          "id": "slider_thumbnails",
          "label": "Display Thumbnails Under Slider",
          "default":"none",
          "options": [	
            {
            "value": "none",
            "label": "No"
            },
            {
            "value": "all",
            "label": "Yes"
            },
            {
            "value": "mobile",
            "label": "Mobile Only"
            },
            {
            "value": "desktop",
            "label": "Desktop Only"
            }
          ]
      },
      {
          "type": "checkbox",
